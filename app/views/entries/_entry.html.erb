<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= entry.meal_type %> | <%= @entry.category.title %>
      </p>
      <div class="panel-block">
        Calories: <%= entry.calories %>
      </div>
      <div class="panel-block">
        Proteins: <%= entry.proteins %>
      </div>
      <div class="panel-block">
        Carbohydrates: <%= entry.carbohydrates %>
      </div>
      <div class="panel-block">
        Fats: <%= entry.fats %>
      </nav>
      <div class="columns is-mobile">
        <div class="column">
          <%= link_to "Edit", edit_entry_path(@entry), class:"button is-gray" %>
          <%= link_to "Back", entries_path, class:"button is-gray" %>
          <%= button_to "Destroy", entry, method: :delete, data: {confirm: "Are you sure?"}, class:"button is-gray mt-2" %>
        </div>
      </div>
    </div>
  </div>
</div>
